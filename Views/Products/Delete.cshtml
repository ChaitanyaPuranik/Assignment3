@model ProductRegistration_Group.Models.Product
 
@{
    ViewData["Title"] = "Delete Product";
}
 
<h2>Delete Product</h2>
 
<h4>Are you sure you want to delete this?</h4>
<hr />
 
<dl class="row">
<dt class="col-sm-2">ProductId</dt>
<dd class="col-sm-10">@Model.ProductId</dd>
 
    <dt class="col-sm-2">Name</dt>
<dd class="col-sm-10">@Model.Name</dd>
 
    <dt class="col-sm-2">Price</dt>
<dd class="col-sm-10">@Model.Price</dd>
 
    <dt class="col-sm-2">CategoryId</dt>
<dd class="col-sm-10">@Model.CategoryId</dd>
</dl>
 
<form asp-action="Delete" method="post">
<input type="hidden" asp-for="ProductId" />
 
    <button type="submit" class="btn btn-danger">Delete</button>
<a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>