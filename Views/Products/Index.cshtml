@model IEnumerable<ProductRegistration_Group.Models.Product>

@{
    ViewData["Title"] = "Products List";
}

<h2>Products</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Product</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ProductId</th>
            <th>Name</th>
            <th>Price</th>
            <th>CategoryId</th>
            <th>Actions</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.ProductId</td>
                <td>@p.Name</td>
                <td>@p.Price</td>
                <td>@p.CategoryId</td>
                <td>
                    <a asp-action="Details" asp-route-id="@p.ProductId">Details</a> |
                    <a asp-action="Edit" asp-route-id="@p.ProductId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@p.ProductId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
